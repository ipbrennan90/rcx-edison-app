doctype html
html
  head
    title= title
    script(src='/javascripts/jsmpg.js')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/jquery.js')
    script(src='/javascripts/global.js')
    script(src='/bootstrap/js/bootstrap.min.js')
  body
    block content
      div(class="background-image")
      div(class="container")
        h1= title
        canvas(id="canvas-video" width="640" height="480")

      div(class="user-options btn-group btn-group-lg")
        button(type="button" class="sign-in btn btn-default")="Sign-In"
        button(type="button" class="sign-up btn btn-default")="Sign-Up"
      div(class="user-sign-up col-sm-4")
        form(name = "new-user" action="")
          div(class="form-group")
            input(type="text" id="username" name='user[name]' class="form-control" placeholder="Username")
          div(class="form-group")
            input(type="email" id="email" name='user[email]' class="form-control" placeholder="Email")
          div(class="form-group")
            input(type="password" id="password" name='user[password]' class="form-control" placeholder="Password")
          div(class="form-group")
            input(type="password" id="password-confirmation" class="form-control" placeholder="Password Confirmation")
          button(type="submit" name="commit" class="add-user btn btn-success")="Submit"
      
